<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_heigh"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/login_back"
            android:layout_width="@dimen/toolbar_content"
            android:layout_height="@dimen/toolbar_content"
            android:layout_margin="@dimen/toolbar_content_margin"
            android:src="@drawable/ic_toolbar_back" />

        <TextView
            android:id="@+id/iv_register"
            android:layout_width="@dimen/toolbar_content"
            android:layout_height="@dimen/toolbar_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/toolbar_content_margin"
            android:layout_marginStart="@dimen/toolbar_content_margin"
            android:layout_toEndOf="@+id/login_back"
            android:layout_toRightOf="@+id/login_back"
            android:gravity="center"
            android:text="gfgfddf"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/toolbar_content_textsize" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center">
        <ImageView
            android:id="@+id/login_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_bag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/content_margin_hieght"
            android:gravity="center"
            android:text="ddvvcbvcbvcc"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/content_textsize_small" />
        </LinearLayout>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/input_margin_hieght"
        android:layout_marginLeft="@dimen/input_margin_hieght"
        android:layout_marginRight="@dimen/input_margin_hieght"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/content"
            android:layout_height="@dimen/content"
            android:layout_margin="@dimen/content_margin_hieght"
            android:src="@mipmap/ic_launcher" />
        <EditText
            android:phoneNumber="true"
            android:id="@+id/login_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_margin_hieght"
            android:textSize="@dimen/content_textsize_small"
            android:background="@drawable/edit_bg"
            android:hint="fdgdgdsgfsdg"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin_hieght"

        android:layout_marginLeft="@dimen/input_margin_hieght"
        android:layout_marginRight="@dimen/input_margin_hieght"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/content"
            android:layout_height="@dimen/content"
            android:layout_margin="@dimen/content_margin_hieght"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:password="true"
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_margin_hieght"
            android:background="@drawable/edit_bg"
            android:hint="dfdffffdv"
            android:inputType="textPassword"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <Button
        android:id="@+id/logbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_hieght"
        android:layout_marginRight="@dimen/input_margin_hieght"
        android:layout_marginLeft="@dimen/input_margin_hieght"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:textSize="@dimen/content_textsize_small"
        android:textColor="@color/colorAccent"
        android:text="dsfsdfdsfsdf"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/input_margin_hieght"
        android:gravity="right">
    <TextView
        android:id="@+id/iv_pwdforgive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/input_margin_hieght"
        android:padding="@dimen/input_margin_hieght"
        android:gravity="center"
        android:text="fdsfdsfsa"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/content_textsize_small" />
    </LinearLayout>

</LinearLayout>

