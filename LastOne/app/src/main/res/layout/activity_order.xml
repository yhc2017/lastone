<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lastone.com.echo.lastone.OrderActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/order_back"
            android:layout_width="@dimen/toolbar_content"
            android:layout_height="@dimen/toolbar_content"
            android:layout_margin="@dimen/content_margin_hieght"
            android:src="@drawable/ic_toolbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_margin_hieght"
            android:text="任务详情填写"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/toolbar_content_textsize"
            android:textStyle="bold" />

        <Button
            android:id="@+id/order_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textColor="#FFF"
            android:background="@color/colorPrimary"
            android:text="提交"
            android:textSize="@dimen/toolbar_content_textsize"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请填写基本信息"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>

                    <TextView
                        android:layout_margin="20dp"
                        android:text="任务类型" />
                    <Button
                        android:layout_marginTop="20dp"
                        android:text="调查"
                        android:layout_marginLeft="120dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_margin="20dp"
                        android:text="任务标题"
                        />
                    <EditText
                        android:layout_marginTop="20dp"
                        android:hint="调查"
                        android:layout_marginLeft="120dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_margin="20dp"
                        android:text="任务赏金"
                        />
                    <EditText
                        android:layout_marginTop="20dp"
                        android:hint="2.00"
                        android:layout_marginLeft="120dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_margin="20dp"
                        android:text="截止时间"
                        />
                    <Button
                        android:layout_marginTop="20dp"
                        android:text="选择时间"
                        android:layout_marginLeft="120dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_margin="20dp"
                        android:text="期望时间"
                        />
                    <Button
                        android:layout_marginTop="20dp"
                        android:text="选择时间"
                        android:layout_marginLeft="120dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_margin="20dp"
                        android:text="当前地址"
                        />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="120dp"
                        android:text="华软软件学院" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
